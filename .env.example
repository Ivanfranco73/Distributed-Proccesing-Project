# ===========================================
# Airly Data Collector - Environment Variables
# ===========================================
# Copy this to .env and fill in your values

# Airly API Configuration
AIRLY_API_KEY=your_api_key_here
LATITUDE=54.3520
LONGITUDE=18.6466
INSTALLATION_ID=3387
CITY_NAME=Gdansk

# ===========================================
# Database Configuration (MariaDB)
# ===========================================
ENABLE_DATABASE=true
# These are set automatically in docker-compose, but can be overridden
# DB_HOST=mariadb
# DB_PORT=3306
# DB_NAME=airly
# DB_USER=airly
MARIADB_PASSWORD=your_secure_password_here

# ===========================================
# CSV Backup (Optional)
# ===========================================
# Set to true if you want to keep CSV as a backup
ENABLE_CSV=false

# ===========================================
# Google Sheets Configuration (Optional)
# ===========================================
ENABLE_GOOGLE_SHEETS=false
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SHEET_NAME=Sheet1
GOOGLE_CREDENTIALS_FILE=/app/credentials.json

# ===========================================
# HSBI API Configuration (Optional)
# ===========================================
ENABLE_HSBI_API=false
HSBI_API_URL=https://scl.fh-bielefeld.de/SmartDataAirquality/smartdata/records/sensor_6cc84005e3d8?storage=smartmonitoring
HSBI_SENSOR_ID=1
HSBI_ALTITUDE=10.0
HSBI_VERIFY_SSL=true

# ===========================================
# REST API Configuration
# ===========================================
# API key for write access (generate with: openssl rand -hex 32)
API_KEY=your_api_key_here
